<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardViewItemSalas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="5dp"
        android:foreground="?android:attr/selectableItemBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/LblBloque"
                android:text="H"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <TextView android:id="@+id/LblTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sala h"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="18sp" />

            <TextView android:id="@+id/LblSubTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="clase"
                android:layout_alignBottom="@+id/LblBloque"
                android:layout_alignLeft="@+id/LblTitulo"
                android:layout_alignStart="@+id/LblTitulo" />

            <TextView
                android:text="@string/txt_masdetalles_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_masdetalles_salas"
                android:textColor="?attr/actionModeSplitBackground"
                android:textSize="12sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>



