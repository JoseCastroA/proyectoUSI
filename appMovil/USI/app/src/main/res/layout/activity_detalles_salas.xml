<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalles_salas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.appusi.usiunidaddeserviciosinformaticos.ActivityDetallesSalas"
    android:weightSum="1">

    <TextView
        android:id="@+id/nombre_bloque_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Bloque C"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/nombre_sala_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:text="Nombre : Sala H1"
        android:textSize="23dp"
        />

    <TextView
        android:id="@+id/capacidad_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Capacidad : 30"
        android:textSize="23dp"/>
    <TextView
        android:id="@+id/descripcion_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Descripcion : clase de redes"
        android:textSize="20dp"/>
    <View
        android:id="@+id/color_info"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:background="@color/colorPrimary"/>

</LinearLayout>
